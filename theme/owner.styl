.owner
  margin: 0 0 1rem
  padding: 0 1rem
  border: solid #757575
  border-width: 0 0 1px

.repos
  display: flex
  margin: 0 0 1rem

.repos-sidebar
  flex: 1 1 1px
  margin: 0 1rem

.repos-content
  flex: 3 3 3px
  margin: 0 1rem

.card
  flex: 1 1 1px
  margin: 0 .5rem 1rem
  padding: 1rem
  min-width: 26%
  border-radius: 3px
  box-shadow: 0 1px 2px rgba(0,0,0,.25)
  background: #fff
  transition: .15s

  &:hover
    box-shadow: 0 2px 4px rgba(0,0,0,.25)

.card-title
  margin: 0

.card-meta
  list-style: none
  display: flex
  justify-content: space-between
  margin: 0
  padding: 0

  li
    flex: 1 1 auto
    margin: 0

.card-list
  list-style: none
  display: flex
  flex-wrap: wrap
  padding: 0
  margin: 0 -.5rem
