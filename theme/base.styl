html
body
  width: 100%
  height: 100%
  margin: 0
  padding: 0

html
  font: 16px/1.5 sans-serif

body
  background: #f5f5f5


// Links

a
  color: #1e88e5
  text-decoration: none

  &:hover
  &:focus
    color: #1976d2
    text-decoration: underline


// Headings

h1, h2, h3, h4, h5, h6
  font-weight: 700

h1
  font-size: 2rem

h2
  font-size: 1.5rem

h3
  font-size: 1rem

h4
  font-size: 1rem


// Forms

label
  display: block
  margin: 0 0 .5rem
  font-weight: 700

  &:last-child
    margin-bottom: 0

input[type=text]
input[type=search]
input[type=number]
input[type=date]
select
  display: block
  box-sizing: border-box
  width: 100%
  padding: .5rem
  border: 1px solid #424242
  border-radius: 3px
  background: #fff
  font: .85rem/1 sans-serif


.form-group
  margin-bottom: 1rem


// Application container

.container
  display: flex
  flex-direction: column
  justify-content: center
  box-sizing: border-box
  margin: 0 auto
  padding: 0 1rem
  max-width: 1200px
  min-height: 100%
